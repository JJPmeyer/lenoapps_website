# Allow embedding in iframes for Monday.com
<Files "embed-docs.html">
    Header always set X-Frame-Options "ALLOW-FROM https://monday.com"
    Header always set Content-Security-Policy "frame-ancestors 'self' https://*.monday.com https://monday.com"
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</Files>

# General security headers
Header always set X-XSS-Protection "1; mode=block"
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
